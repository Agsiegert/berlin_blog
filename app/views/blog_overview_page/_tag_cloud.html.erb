<h3 class="h4">Tags</h3>

<hr/>

  <% BlogPostPage.all_tags.each do |tag| %>
    <%= link_to(scrivito_path(@obj, tag: tag.name)) do %>
      <button class="btn btn-primary" type="button">
        <%= tag.name %> 
          <span class="badge">
            <%= tag.count %>
          </span>
      </button>
    <% end %>
  <% end %>

  